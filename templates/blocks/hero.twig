<section id="hero--{{ block.id }}" class="section py-18">
	<div class="container">
		<div class="about__wrapper">
			<div class="about__left"></div>
			<div class="about__right">
				<p class="eyebrow">{{ fields.eyebrow }}</p>
				<h1 class="hero__heading">{{ fields.heading }}</h1>
				<p class="hero__subheading">{{ fields.description }}</p>
                {% if fields.has_button %}
				    <a href="{{ fields.button_link }}" class="btn btn--primary">{{ fields.button_text }}</a>
                {% endif %}
			</div>
		</div>
	</div>
</section>