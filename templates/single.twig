{% extends "base.twig" %}

{% block content %}

{# BEGIN POST SECTION #}
<section id="post" class="section">
	<div class="container">
		<div class="post__wrapper prose">
		<img src="{{ post.thumbnail.src|resize(1200, 675) }}" class="post__featured">
			<h1 class="post__heading">{{ post.title }}</h1>
		</div>
	</div>
	<article class="prose">
		{{ post.content }}
	</article>
</section>
{# END POST SECTION #}

{# BEGIN RELATED SECTION #} 
<section id="related" class="section">
	<div class="container">
		<div class="section__helmet">
			<h2 class="related__heading">Related posts</h2>
		</div>
		<div class="related__wrapper">
			{% for post in posts %}
			<a href="{{ post.link }}" class="posts__card">
                <img src="{{ post.thumbnail }}" alt="" class="posts__card__img">
                <div class="posts__card__bottom">
                    <h3 class="posts__card__title">{{ post.title }}</h3>
                    <p class="posts__card__description">Lorem ipsum dolor</p>
                    <p class="posts__card__link">Read more<img src="{{ theme.path ~ '/static/img/arrow-right.svg' }}" class="icon" /></p> 
                </div>
            </a>
			{% endfor %}
		</div>
	</div>
</section>
{# END RELATED SECTION #}

{% endblock %}
